[Unit]
Description=Run the node server
Documentation=/opt/ink2ai/server/README.md
After=network.target

[Service]
Type=simple
User=root
ExecStart=python -m uvicorn fast_api:app --host 0.0.0.0 --port 8081 --ssl-keyfile /etc/letsencrypt/live/ink2ai.lukedupin.com/privkey.pem --ssl-certfile /etc/letsencrypt/live/ink2ai.lukedupin.com/fullchain.pem
Restart=always
WorkingDirectory=/opt/ink2ai/server
Environment="PATH=/opt/ink2ai/server/venv/bin"

[Install]
WantedBy=multi-user.target
